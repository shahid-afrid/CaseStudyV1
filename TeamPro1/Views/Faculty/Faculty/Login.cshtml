@model TeamPro1.Models.FacultyLoginViewModel

@{
    ViewBag.Title = "Faculty Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Faculty Login - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --faculty-purple: #6f42c1;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)), url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 0;
                display: block;
                background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
                opacity: 0.20;
                pointer-events: none;
            }

        .glass-card {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 16px 48px var(--card-shadow);
            border-radius: 26px;
            padding: 50px 40px 40px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            max-width: 420px;
            width: 90vw;
            margin: 120px auto 0 auto;
            position: relative;
            z-index: 1;
            border: 2px solid var(--slate);
        }

        .logo {
            width: 70px;
            height: 70px;
            margin-bottom: 20px;
            filter: drop-shadow(2px 6px 18px var(--royal-blue));
            object-fit: contain;
            background: var(--cream);
            border-radius: 12px;
            padding: 6px;
        }

        h2 {
            font-size: 1.9em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-bottom: 30px;
            letter-spacing: 1px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            display: block;
            font-weight: 600;
            color: var(--royal-blue);
            margin-bottom: 8px;
            font-size: 0.95em;
        }

        input[type="email"], input[type="password"], input[type="text"] {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--slate);
            border-radius: 12px;
            font-size: 1em;
            font-family: 'Montserrat', sans-serif;
            background: rgba(249,250,242,0.8);
            transition: border-color 0.3s, box-shadow 0.3s;
            box-sizing: border-box;
        }

            input[type="email"]:focus, input[type="password"]:focus, input[type="text"]:focus {
                outline: none;
                border-color: var(--faculty-purple);
                box-shadow: 0 0 0 3px rgba(111, 66, 193, 0.2);
            }

        .password-container {
            position: relative;
            display: block;
            overflow: visible; /* ensure toggle isn't clipped */
        }

            .password-container input {
                width: 100%;
                padding-right: 56px; /* room for toggle */
                box-sizing: border-box;
            }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            cursor: pointer;
            font-size: 16px;
            z-index: 9999;
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--faculty-purple);
            padding: 0;
            line-height: 1;
            border-radius: 8px;
        }

            .password-toggle:hover {
                color: var(--warm-gold);
                background: rgba(255,255,255,0.04);
            }

            .password-toggle svg {
                width: 20px;
                height: 20px;
                display: block;
            }

        .glass-btn {
            width: 100%;
            background: linear-gradient(90deg, var(--faculty-purple) 74%, var(--warm-gold) 100%);
            color: #fff;
            border: none;
            border-radius: 15px;
            padding: 16px 24px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 8px 24px var(--card-shadow);
            border: 2px solid var(--slate);
            transition: all 0.3s ease;
            margin-top: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .glass-btn:hover {
                box-shadow: 0 16px 32px rgba(111, 66, 193, 0.4);
                background: linear-gradient(90deg, var(--warm-gold) 62%, var(--faculty-purple) 100%);
                color: var(--royal-blue);
                transform: translateY(-3px);
                border: 2px solid var(--faculty-purple);
            }

        .validation-summary {
            background: rgba(220, 53, 69, 0.1);
            border: 1px solid var(--error-red);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 20px;
            color: var(--error-red);
            text-align: left;
        }

        .field-validation-error {
            color: var(--error-red);
            font-size: 0.85em;
            margin-top: 5px;
            display: block;
        }

        .nav-link {
            position: absolute;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 8px 16px;
            border-radius: 20px;
            text-decoration: none;
            font-weight: 600;
            border: 1px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                background: var(--warm-gold);
                color: var(--royal-blue);
                transform: translateY(-2px);
                text-decoration: none;
            }

        .faculty-icon {
            font-size: 3em;
            margin-bottom: 10px;
        }

        .app-footer {
            background: rgba(249, 250, 242, 0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate, #CED3DC);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            position: relative;
            border-radius: 20px 20px 0 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance { 
            font-size: 1em; 
            font-weight: 600; 
            color: #444;
            margin-bottom: 12px;
        }

        .footer-line.team {
            font-size: 0.95em;
            font-weight: 500;
            color: #444;
        }

        .footer-line.copyright {
            font-size: 0.9em;
            font-weight: 600;
            color: #274060;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid rgba(39,64,96,0.1);
        }

        .footer-highlight { 
            color: #274060;
            font-weight: 700;
        }

        .footer-name { 
            color: #274060;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .glass-card {
                margin: 60px auto 0 auto;
                padding: 40px 25px 30px 25px;
            }

            h2 {
                font-size: 1.6em;
            }

            .nav-link {
                position: static;
                margin-bottom: 20px;
                display: inline-block;
            }

            .app-footer {
                padding: 20px 15px;
                margin-top: 30px;
            }

            .footer-line.guidance {
                font-size: 0.9em;
            }

            .footer-line.team {
                font-size: 0.85em;
            }

            .footer-line.copyright {
                font-size: 0.8em;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Index", "Home")" class="nav-link">⬅️ Back to Home</a>

    <div class="glass-card">
        <img src="~/images/RGMCET.jpg" alt="RGMCET Logo" class="logo" />

        <h2>Faculty Login</h2>

        <form asp-action="Login" method="post">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="All" class="validation-summary"></div>
            }

            <div class="form-group">
                <label>Email Address:</label>
                <input asp-for="Email" type="email" required />
                <span asp-validation-for="Email" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label>Password:</label>
                <div class="password-container">
                    <input asp-for="Password" type="password" id="password" required autocomplete="current-password" />
                    <!-- Toggle button uses inline SVGs; closed-eye is hidden initially with inline style -->
                    <button type="button" class="password-toggle" aria-pressed="false" aria-label="Show password" onclick="togglePassword()">
                        <!-- Eye (visible when password is hidden) -->
                        <svg id="eye-open" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" role="img" title="Show">
                            <path fill="currentColor" d="M572.52 241.4C518.1 135.9 407 64 288 64 169 64 57.9 135.9 3.48 241.4a48.21 48.21 0 0 0 0 29.2C57.9 376.1 169 448 288 448s230.1-71.9 284.52-177.4a48.21 48.21 0 0 0 0-29.2zM288 400c-88.37 0-168.3-50.66-210.07-128C119.7 194.7 199.6 144 288 144s168.3 50.66 210.07 128C456.3 349.3 376.4 400 288 400zM288 176a112 112 0 1 0 112 112A112 112 0 0 0 288 176z" />
                        </svg>

                        <!-- Eye-slash (hidden initially) -->
                        <svg id="eye-closed" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" role="img" title="Hide" style="display:none;">
                            <path fill="currentColor" d="M634 471L54 3a16 16 0 0 0-22.8 1.6L1.6 29.4A16 16 0 0 0 3 52l73.2 55C30.9 169.6-3.7 216.7 .8 256c7 64.2 119.9 208 287.2 208 79.6 0 150.6-26.1 204.3-64.7l96.3 76.2a16 16 0 0 0 22.2-1.5l28.6-24.8a16 16 0 0 0-1.5-22.2zM288 400c-88.4 0-168.3-50.7-210.1-128 23.8-46.4 61.9-83.5 106.1-106.4L352 344c-25.4 23-58.6 40-104 40z" />
                        </svg>
                    </button>
                </div>
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <button type="submit" class="glass-btn">
                Login as Faculty
            </button>
        </form>
    </div>

    <script type="text/javascript">
        function togglePassword() {
            var pwd = document.getElementById("password");
            var eyeOpen = document.getElementById("eye-open");
            var eyeClosed = document.getElementById("eye-closed");
            var btn = document.querySelector('.password-toggle');

            if (!pwd) return;

            if (pwd.type === "password") {
                pwd.type = "text";
                if (eyeOpen) eyeOpen.style.display = 'none';
                if (eyeClosed) eyeClosed.style.display = 'block';
                btn.setAttribute('aria-pressed', 'true');
                btn.setAttribute('aria-label', 'Hide password');
            } else {
                pwd.type = "password";
                if (eyeClosed) eyeClosed.style.display = 'none';
                if (eyeOpen) eyeOpen.style.display = 'block';
                btn.setAttribute('aria-pressed', 'false');
                btn.setAttribute('aria-label', 'Show password');
            }
        }
    </script>

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) &
                <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>
</body>
</html>