@{
    ViewData["Title"] = "Grouped Student Pool";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Grouped Student Pool - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
            --info-blue: #17a2b8;
            --warning-orange: #ff9800;
        }

        * {
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)),
            url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 0;
            display: block;
            background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
            opacity: 0.20;
            pointer-events: none;
        }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 30px 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 30px;
            border: 2px solid var(--slate);
        }

        .dashboard-header h2 {
            font-size: 2.3em;
            font-weight: 700;
            color: var(--royal-blue);
            margin: 0 0 10px 0;
            letter-spacing: 1px;
        }

        .dashboard-header p {
            color: #666;
            font-size: 1em;
            margin: 5px 0;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .nav-link:hover {
            background: var(--warm-gold);
            color: var(--royal-blue);
            transform: translateY(-2px);
            text-decoration: none;
        }

        .alert {
            padding: 18px 24px;
            margin-bottom: 25px;
            border: 3px solid transparent;
            border-radius: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1em;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            animation: slideDown 0.5s ease;
        }

        .alert-success {
            color: #155724;
            background: linear-gradient(135deg, rgba(212, 237, 218, 0.98), rgba(195, 230, 203, 0.98));
            border-color: var(--success-green);
        }

        .alert-danger {
            color: #721c24;
            background: linear-gradient(135deg, rgba(248, 215, 218, 0.98), rgba(242, 200, 203, 0.98));
            border-color: var(--error-red);
        }

        .alert-warning {
            color: #856404;
            background: linear-gradient(135deg, rgba(255, 243, 205, 0.98), rgba(255, 236, 179, 0.98));
            border-color: var(--warning-orange);
        }

        .alert-info {
            color: #0c5460;
            background: linear-gradient(135deg, rgba(209, 236, 241, 0.98), rgba(190, 229, 235, 0.98));
            border-color: var(--info-blue);
        }

        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .info-card {
            background: rgba(249,250,242,0.95);
            border-radius: 15px;
            padding: 20px 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 6px 25px var(--card-shadow);
            margin-bottom: 30px;
        }

        .info-card h4 {
            color: var(--royal-blue);
            font-size: 1.2em;
            margin: 0 0 15px 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .info-card ul {
            margin: 0;
            padding-left: 20px;
            color: #555;
            line-height: 1.8;
        }

        .info-card ul li {
            margin-bottom: 8px;
        }

        /* Table Container */
        .table-container {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 30px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
            overflow-x: auto;
            margin-bottom: 30px;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .table-header h3 {
            color: var(--royal-blue);
            font-size: 1.5em;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .team-count {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            padding: 8px 20px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.95em;
        }

        /* Teams Table */
        .teams-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            font-size: 0.95em;
        }

        .teams-table thead {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
        }

        .teams-table thead th {
            padding: 18px 15px;
            text-align: left;
            font-weight: 700;
            font-size: 1em;
            letter-spacing: 0.5px;
            border: none;
        }

        .teams-table thead th:first-child {
            border-top-left-radius: 12px;
        }

        .teams-table thead th:last-child {
            border-top-right-radius: 12px;
        }

        .teams-table tbody tr {
            background: rgba(255, 255, 255, 0.7);
            transition: all 0.3s ease;
        }

        .teams-table tbody tr:hover {
            background: rgba(255, 255, 255, 0.95);
            transform: scale(1.005);
            box-shadow: 0 4px 15px var(--card-shadow);
        }

        .teams-table tbody td {
            padding: 18px 15px;
            border-bottom: 1px solid var(--slate);
            vertical-align: middle;
        }

        .teams-table tbody tr:last-child td:first-child {
            border-bottom-left-radius: 12px;
        }

        .teams-table tbody tr:last-child td:last-child {
            border-bottom-right-radius: 12px;
        }

        .teams-table tbody tr:last-child td {
            border-bottom: none;
        }

        /* Table cell styles */
        .text-center {
            text-align: center !important;
        }

        .font-bold {
            font-weight: 700;
        }

        .text-royal {
            color: var(--royal-blue);
        }

        .team-number-badge {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            padding: 8px 16px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 1.1em;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 60px;
        }

        .student-info {
            display: flex;
            flex-direction: column;
            gap: 3px;
        }

        .student-name {
            font-weight: 600;
            color: var(--royal-blue);
            font-size: 1em;
        }

        .student-regno {
            color: #666;
            font-size: 0.9em;
            font-weight: 500;
        }

        .team-name-cell {
            color: var(--royal-blue);
            font-weight: 600;
            font-size: 1em;
        }

        .group-badge {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.15), rgba(40, 167, 69, 0.25));
            color: var(--success-green);
            border: 2px solid var(--success-green);
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9em;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state i {
            font-size: 4em;
            color: var(--slate);
            margin-bottom: 20px;
        }

        .empty-state h4 {
            color: var(--royal-blue);
            font-size: 1.5em;
            margin-bottom: 10px;
        }

        .empty-state p {
            font-size: 1em;
            margin-bottom: 20px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--royal-blue), var(--warm-gold));
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(39, 64, 96, 0.3);
            text-decoration: none;
            color: white;
        }

        /* Highlight current student's team */
        .teams-table tbody tr.my-team {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.08), rgba(40, 167, 69, 0.12));
            border: 2px solid var(--success-green);
        }

        .teams-table tbody tr.my-team:hover {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.12), rgba(40, 167, 69, 0.16));
        }

        .my-team-badge {
            background: linear-gradient(135deg, var(--success-green), #20c997);
            color: white;
            padding: 4px 12px;
            border-radius: 15px;
            font-size: 0.75em;
            font-weight: 700;
            margin-left: 10px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

        @@media (max-width: 768px) {
            .dashboard-header h2 {
                font-size: 1.8em;
            }

            .table-container {
                padding: 20px;
            }

            .teams-table {
                font-size: 0.85em;
            }

            .teams-table thead th,
            .teams-table tbody td {
                padding: 12px 8px;
            }

            .nav-link {
                position: static;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Back to Dashboard Link -->
        <a href="@Url.Action("MainDashboard", "Student")" class="nav-link">
            <i class="fas fa-arrow-left"></i>
            Back to Dashboard
        </a>

        <!-- Header -->
        <div class="dashboard-header">
            <h2><i class="fas fa-users"></i> Grouped Student Pool</h2>
            <p>View all formed teams from your year and semester</p>
            @{
                var semesterDisplay = ViewBag.CurrentStudentSemester == 1 ? "I Semester" : ViewBag.CurrentStudentSemester == 2 ? "II Semester" : $"Semester {ViewBag.CurrentStudentSemester}";
            }
            <p><strong>Year:</strong> @ViewBag.CurrentStudentYear | <strong>Semester:</strong> @semesterDisplay</p>
        </div>

        <!-- Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle"></i>
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i>
                @TempData["InfoMessage"]
            </div>
        }

        <!-- Info Card -->
        <div class="info-card">
            <h4><i class="fas fa-info-circle"></i> About Grouped Student Pool</h4>
            <ul>
                <li><strong>Team Formation:</strong> Teams are formed when students accept team requests</li>
                <li><strong>Team Numbers:</strong> Assigned automatically based on the order of team formation</li>
                <li><strong>Team Name:</strong> Generated from both students' registration numbers</li>
                <li><strong>Your Team:</strong> If you're in a team, it will be highlighted in green</li>
            </ul>
        </div>

        <!-- Teams Table Container -->
        <div class="table-container">
            <div class="table-header">
                <h3><i class="fas fa-layer-group"></i> Formed Teams</h3>
                <div class="team-count">
                    <i class="fas fa-users"></i> Total Teams: @ViewBag.Teams.Count
                </div>
            </div>

            @if (ViewBag.Teams.Count == 0)
            {
                <div class="empty-state">
                    <i class="fas fa-user-friends"></i>
                    <h4>No Teams Formed Yet</h4>
                    <p>There are no formed teams in your year and semester yet.</p>
                    <p>Be the first to form a team!</p>
                    <a href="@Url.Action("PoolOfStudents", "Student")" class="btn-primary">
                        <i class="fas fa-plus-circle"></i> Go to Pool of Students
                    </a>
                </div>
            }
            else
            {
                <table class="teams-table">
                    <thead>
                        <tr>
                            <th class="text-center" style="width: 15%;">Team Number</th>
                            <th style="width: 42.5%;">Student 1</th>
                            <th style="width: 42.5%;">Student 2</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var team in ViewBag.Teams)
                        {
                            var isMyTeam = team.Student1Id == ViewBag.CurrentStudentId || team.Student2Id == ViewBag.CurrentStudentId;
                            var student1Name = team.Student1?.FullName ?? "Unknown";
                            var student1RegNo = team.Student1?.RegdNumber ?? "N/A";
                            var student2Name = team.Student2?.FullName ?? "Unknown";
                            var student2RegNo = team.Student2?.RegdNumber ?? "N/A";
                            var teamName = $"{student1RegNo}-{student2RegNo}";
                            
                            <tr class="@(isMyTeam ? "my-team" : "")">
                                <td class="text-center">
                                    <span class="team-number-badge">
                                        @team.TeamNumber
                                    </span>
                                    @if (isMyTeam)
                                    {
                                        <span class="my-team-badge">
                                            <i class="fas fa-star"></i> My Team
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="student-info">
                                        <span class="student-name">@student1Name</span>
                                        <span class="student-regno">Regd: @student1RegNo</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="student-info">
                                        <span class="student-name">@student2Name</span>
                                        <span class="student-regno">Regd: @student2RegNo</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</body>
</html>
