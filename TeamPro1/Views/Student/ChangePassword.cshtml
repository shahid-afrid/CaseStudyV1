@model TeamPro1.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Change Password - TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --success-green: #28a745;
            --error-red: #dc3545;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 20px 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)), url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 0;
                display: block;
                background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
                opacity: 0.20;
                pointer-events: none;
            }

        .main-container {
            position: relative;
            z-index: 1;
            max-width: 600px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .nav-link {
            position: fixed;
            top: 20px;
            left: 20px;
            background: rgba(249,250,242,0.9);
            color: var(--royal-blue);
            padding: 10px 20px;
            border-radius: 25px;
            text-decoration: none;
            font-weight: 600;
            border: 2px solid var(--slate);
            backdrop-filter: blur(8px);
            transition: all 0.3s ease;
            z-index: 100;
        }

            .nav-link:hover {
                background: var(--warm-gold);
                color: var(--royal-blue);
                transform: translateY(-2px);
                text-decoration: none;
            }

        .dashboard-header {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 8px 32px var(--card-shadow);
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            backdrop-filter: blur(12px);
            margin-bottom: 40px;
            border: 2px solid var(--slate);
        }

            .dashboard-header h2 {
                font-size: 2.5em;
                font-weight: 700;
                color: var(--royal-blue);
                margin: 0;
                letter-spacing: 1.2px;
                display: flex;
                justify-content: center;
                align-items: center;
                gap: 12px;
            }

        .alert {
            padding: 18px 24px;
            margin-bottom: 30px;
            border: 3px solid transparent;
            border-radius: 15px;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.1em;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            backdrop-filter: blur(10px);
            animation: slideDown 0.5s ease;
        }

        .alert-success {
            color: #155724;
            background: linear-gradient(135deg, rgba(212, 237, 218, 0.98), rgba(195, 230, 203, 0.98));
            border-color: var(--success-green);
            box-shadow: 0 8px 25px rgba(40, 167, 69, 0.3);
        }

        .alert-success::before {
            content: "\f058";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            font-size: 1.5em;
            color: var(--success-green);
        }

        .alert-danger {
            color: #721c24;
            background: linear-gradient(135deg, rgba(248, 215, 218, 0.98), rgba(242, 200, 203, 0.98));
            border-color: var(--error-red);
            box-shadow: 0 8px 25px rgba(220, 53, 69, 0.3);
        }

        .alert-danger::before {
            content: "\f06a";
            font-family: "Font Awesome 6 Free";
            font-weight: 900;
            font-size: 1.5em;
            color: var(--error-red);
        }

        @@keyframes slideDown {
            from { opacity: 0; transform: translateY(-30px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .password-form-card {
            background: rgba(249,250,242,0.95);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(12px);
            border: 2px solid var(--slate);
            box-shadow: 0 8px 32px var(--card-shadow);
        }

        .student-info {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid var(--slate);
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
            font-weight: 700;
            font-size: 1.5em;
            color: var(--royal-blue);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            font-weight: 700;
            margin-bottom: 8px;
            color: var(--royal-blue);
            font-size: 1.1em;
        }

        .form-input {
            width: 100%;
            padding: 15px;
            border: 2px solid var(--slate);
            border-radius: 10px;
            font-size: 1em;
            font-family: 'Montserrat', Arial, sans-serif;
            background: rgba(255, 255, 255, 0.9);
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

            .form-input:focus {
                outline: none;
                border-color: var(--warm-gold);
                background: rgba(255, 255, 255, 1);
                box-shadow: 0 0 0 3px rgba(255, 200, 87, 0.2);
            }

        .password-container {
            position: relative;
            display: block;
            overflow: visible;
        }

            .password-container input {
                width: 100%;
                padding-right: 56px;
                box-sizing: border-box;
            }

        .password-toggle {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            cursor: pointer;
            font-size: 16px;
            z-index: 9999;
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--royal-blue);
            padding: 0;
            line-height: 1;
            border-radius: 8px;
        }

            .password-toggle:hover {
                color: var(--warm-gold);
                background: rgba(255,255,255,0.04);
            }

            .password-toggle svg {
                width: 20px;
                height: 20px;
                display: block;
            }

        .validation-error {
            color: var(--error-red);
            font-size: 0.9em;
            margin-top: 5px;
            display: block;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            justify-content: center;
            margin-top: 35px;
            flex-wrap: wrap;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--royal-blue) 0%, var(--warm-gold) 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px var(--card-shadow);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, var(--warm-gold) 0%, var(--royal-blue) 100%);
                transform: translateY(-3px);
                box-shadow: 0 12px 35px rgba(255, 200, 87, 0.4);
            }

        .btn-secondary {
            background: linear-gradient(135deg, var(--slate) 0%, #95a5a6 100%);
            color: white;
            border: none;
            border-radius: 25px;
            padding: 15px 30px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-secondary:hover {
                background: linear-gradient(135deg, #95a5a6 0%, var(--slate) 100%);
                transform: translateY(-3px);
                text-decoration: none;
                color: white;
            }

        @@media (max-width: 768px) {
            .main-container {
                padding: 0 15px;
            }

            .dashboard-header {
                padding: 30px 20px;
            }

                .dashboard-header h2 {
                    font-size: 2em;
                }

            .password-form-card {
                padding: 25px 20px;
            }

            .form-actions {
                flex-direction: column;
                align-items: stretch;
            }

            .btn-primary, .btn-secondary {
                justify-content: center;
            }

            .nav-link {
                position: static;
                display: inline-block;
                margin-bottom: 20px;
            }
        }
    
        /* App Footer Styling */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate, #CED3DC);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            font-family: 'Montserrat', Arial, sans-serif;
            color: #274060;
            position: relative;
            border-radius: 20px 20px 0 0;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-line.guidance { font-size: 1em; font-weight: 600; color: #444;
            margin-bottom: 12px;
        }

        .footer-line.team {
            font-size: 0.95em;
            font-weight: 500;
            color: #444;
        }

        .footer-line.copyright {
            font-size: 0.9em;
            font-weight: 600;
            color: #274060;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid rgba(39,64,96,0.1);
        }

        .footer-highlight { color: #274060;
            font-weight: 700;
        }

        .footer-name { color: #274060;
            font-weight: 600;
        }

        @@media (max-width: 768px) {
            .app-footer {
                padding: 20px 15px;
                margin-top: 30px;
            }

            .footer-line.guidance {
                font-size: 0.9em;
            }

            .footer-line.team {
                font-size: 0.85em;
            }

            .footer-line.copyright {
                font-size: 0.8em;
            }
        }
    </style>
</head>
<body>
    <a href="@Url.Action("Dashboard", "Student")" class="nav-link"><i class="fas fa-arrow-left"></i> Back to Profile</a>

    <div class="main-container">
        <div class="dashboard-header">
            <h2> Change Password</h2>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        <div class="password-form-card">
            <div class="student-info">
                 @Model.StudentName
            </div>

            <form asp-action="ChangePassword" method="post">
                <input type="hidden" asp-for="StudentId" />
                <input type="hidden" asp-for="StudentName" />

                <div class="form-group">
                    <label asp-for="CurrentPassword" class="form-label"></label>
                    <div class="password-container">
                        <input asp-for="CurrentPassword" type="password" id="currentPassword" class="form-input" placeholder="Enter your current password" />
                        <button type="button" class="password-toggle" aria-pressed="false" aria-label="Show password" onclick="togglePasswordField('currentPassword', 'eyeOpenCurrent', 'eyeClosedCurrent', this)">
                            <svg id="eyeOpenCurrent" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" role="img" title="Show">
                                <path fill="currentColor" d="M572.52 241.4C518.1 135.9 407 64 288 64 169 64 57.9 135.9 3.48 241.4a48.21 48.21 0 0 0 0 29.2C57.9 376.1 169 448 288 448s230.1-71.9 284.52-177.4a48.21 48.21 0 0 0 0-29.2zM288 400c-88.37 0-168.3-50.66-210.07-128C119.7 194.7 199.6 144 288 144s168.3 50.66 210.07 128C456.3 349.3 376.4 400 288 400zM288 176a112 112 0 1 0 112 112A112 112 0 0 0 288 176z" />
                            </svg>
                            <svg id="eyeClosedCurrent" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" role="img" title="Hide" style="display:none;">
                                <path fill="currentColor" d="M634 471L54 3a16 16 0 0 0-22.8 1.6L1.6 29.4A16 16 0 0 0 3 52l73.2 55C30.9 169.6-3.7 216.7 .8 256c7 64.2 119.9 208 287.2 208 79.6 0 150.6-26.1 204.3-64.7l96.3 76.2a16 16 0 0 0 22.2-1.5l28.6-24.8a16 16 0 0 0-1.5-22.2zM288 400c-88.4 0-168.3-50.7-210.1-128 23.8-46.4 61.9-83.5 106.1-106.4L352 344c-25.4 23-58.6 40-104 40z" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="CurrentPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <div class="password-container">
                        <input asp-for="NewPassword" type="password" id="newPassword" class="form-input" placeholder="Enter your new password" />
                        <button type="button" class="password-toggle" aria-pressed="false" aria-label="Show password" onclick="togglePasswordField('newPassword', 'eyeOpenNew', 'eyeClosedNew', this)">
                            <svg id="eyeOpenNew" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" role="img" title="Show">
                                <path fill="currentColor" d="M572.52 241.4C518.1 135.9 407 64 288 64 169 64 57.9 135.9 3.48 241.4a48.21 48.21 0 0 0 0 29.2C57.9 376.1 169 448 288 448s230.1-71.9 284.52-177.4a48.21 48.21 0 0 0 0-29.2zM288 400c-88.37 0-168.3-50.66-210.07-128C119.7 194.7 199.6 144 288 144s168.3 50.66 210.07 128C456.3 349.3 376.4 400 288 400zM288 176a112 112 0 1 0 112 112A112 112 0 0 0 288 176z" />
                            </svg>
                            <svg id="eyeClosedNew" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" role="img" title="Hide" style="display:none;">
                                <path fill="currentColor" d="M634 471L54 3a16 16 0 0 0-22.8 1.6L1.6 29.4A16 16 0 0 0 3 52l73.2 55C30.9 169.6-3.7 216.7 .8 256c7 64.2 119.9 208 287.2 208 79.6 0 150.6-26.1 204.3-64.7l96.3 76.2a16 16 0 0 0 22.2-1.5l28.6-24.8a16 16 0 0 0-1.5-22.2zM288 400c-88.4 0-168.3-50.7-210.1-128 23.8-46.4 61.9-83.5 106.1-106.4L352 344c-25.4 23-58.6 40-104 40z" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="NewPassword" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                    <div class="password-container">
                        <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="form-input" placeholder="Confirm your new password" />
                        <button type="button" class="password-toggle" aria-pressed="false" aria-label="Show password" onclick="togglePasswordField('confirmPassword', 'eyeOpenConfirm', 'eyeClosedConfirm', this)">
                            <svg id="eyeOpenConfirm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" role="img" title="Show">
                                <path fill="currentColor" d="M572.52 241.4C518.1 135.9 407 64 288 64 169 64 57.9 135.9 3.48 241.4a48.21 48.21 0 0 0 0 29.2C57.9 376.1 169 448 288 448s230.1-71.9 284.52-177.4a48.21 48.21 0 0 0 0-29.2zM288 400c-88.37 0-168.3-50.66-210.07-128C119.7 194.7 199.6 144 288 144s168.3 50.66 210.07 128C456.3 349.3 376.4 400 288 400zM288 176a112 112 0 1 0 112 112A112 112 0 0 0 288 176z" />
                            </svg>
                            <svg id="eyeClosedConfirm" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 512" role="img" title="Hide" style="display:none;">
                                <path fill="currentColor" d="M634 471L54 3a16 16 0 0 0-22.8 1.6L1.6 29.4A16 16 0 0 0 3 52l73.2 55C30.9 169.6-3.7 216.7 .8 256c7 64.2 119.9 208 287.2 208 79.6 0 150.6-26.1 204.3-64.7l96.3 76.2a16 16 0 0 0 22.2-1.5l28.6-24.8a16 16 0 0 0-1.5-22.2zM288 400c-88.4 0-168.3-50.7-210.1-128 23.8-46.4 61.9-83.5 106.1-106.4L352 344c-25.4 23-58.6 40-104 40z" />
                            </svg>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="validation-error"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-primary">
                        <i class="fas fa-key"></i> Change Password
                    </button>
                    <a href="@Url.Action("Dashboard", "Student")" class="btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="margin-top: 20px;"></div>
    </div>

    <script type="text/javascript">
        function togglePasswordField(fieldId, eyeOpenId, eyeClosedId, btn) {
            var pwd = document.getElementById(fieldId);
            var eyeOpen = document.getElementById(eyeOpenId);
            var eyeClosed = document.getElementById(eyeClosedId);

            if (!pwd) return;

            if (pwd.type === "password") {
                pwd.type = "text";
                if (eyeOpen) eyeOpen.style.display = 'none';
                if (eyeClosed) eyeClosed.style.display = 'block';
                btn.setAttribute('aria-pressed', 'true');
                btn.setAttribute('aria-label', 'Hide password');
            } else {
                pwd.type = "password";
                if (eyeClosed) eyeClosed.style.display = 'none';
                if (eyeOpen) eyeOpen.style.display = 'block';
                btn.setAttribute('aria-pressed', 'false');
                btn.setAttribute('aria-label', 'Show password');
            }
        }
    </script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }

    <footer class="app-footer">
        <div class="footer-content">
            <div class="footer-line guidance">
                Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET
            </div>
            <div class="footer-line team">
                With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) & <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
            </div>
            <div class="footer-line copyright">
                &copy; All Rights Reserved @@2025
            </div>
        </div>
    </footer>
</body>
</html>
