@{
    ViewBag.Title = "TeamPro1";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>TeamPro1</title>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700,400&display=swap" rel="stylesheet">

    <style>
        :root {
            --royal-blue: #274060;
            --warm-gold: #FFC857;
            --cream: #F9FAF2;
            --slate: #CED3DC;
            --card-shadow: rgba(39,64,96,0.13);
            --admin-orange: #fd7e14;
        }

        body {
            min-height: 100vh;
            margin: 0;
            padding: 0;
            font-family: 'Montserrat', Arial, sans-serif;
            background: linear-gradient(rgba(249, 250, 242, 0.15), rgba(255, 200, 87, 0.10)), url('@Url.Content("~/images/RGMCET-BACKGROUND.jpg")') center center/cover no-repeat fixed;
            position: relative;
        }

            body::before {
                content: "";
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                z-index: 0;
                display: block;
                background: linear-gradient(135deg, var(--cream) 60%, var(--warm-gold) 100%);
                opacity: 0.20;
                pointer-events: none;
            }

        .glass-card {
            background: rgba(249,250,242,0.92);
            box-shadow: 0 16px 48px var(--card-shadow);
            border-radius: 26px;
            padding: 40px 44px 44px 44px;
            text-align: center;
            backdrop-filter: blur(12px);
            max-width: 680px;
            width: 96vw;
            margin: 90px auto 0 auto;
            position: relative;
            z-index: 1;
            border: 2px solid var(--slate);
        }

        /* NEW: Logos + Title Row */
        .logo-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
            margin-bottom: 25px;
        }

        .college-title {
            font-size: 1.35em;
            font-weight: 700;
            color: var(--royal-blue);
            text-align: center;
            flex: 1; /* pushes title to center */
            line-height: 1.3;
        }

        .logo {
            width: 88px;
            height: 88px;
            filter: drop-shadow(2px 6px 18px var(--royal-blue));
            object-fit: contain;
            background: var(--cream);
            border-radius: 12px;
            padding: 6px;
        }

        h1 {
            font-size: 2.1em;
            font-weight: 700;
            color: var(--royal-blue);
            margin-top: 12px;
            margin-bottom: 33px;
            letter-spacing: 1.1px;
        }

        .button-group {
            margin: 36px 0 18px 0;
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
        }

        .glass-btn {
            display: flex;
            align-items: center;
            gap: 10px;
            border: none;
            border-radius: 27px;
            padding: 14px 32px;
            font-size: 1.1em;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 8px 24px var(--card-shadow);
            outline: none;
            text-decoration: none;
            border: 2px solid var(--slate);
            transition: 0.22s;
            color: #fff;
            min-width: 140px;
            justify-content: center;
        }

            .glass-btn.student {
                background: linear-gradient(90deg, var(--royal-blue) 74%, var(--warm-gold) 100%);
            }

                .glass-btn.student:hover {
                    box-shadow: 0 16px 32px rgba(39, 64, 96, 0.4);
                    transform: translateY(-4px) scale(1.035);
                }

            .glass-btn.faculty {
                background: linear-gradient(90deg, #6f42c1 74%, var(--warm-gold) 100%);
            }

                .glass-btn.faculty:hover {
                    box-shadow: 0 16px 32px rgba(111, 66, 193,0.4);
                    transform: translateY(-4px) scale(1.035);
                }

            .glass-btn.admin {
                background: linear-gradient(90deg, var(--admin-orange) 74%, var(--warm-gold) 100%);
            }

                .glass-btn.admin:hover {
                    box-shadow: 0 16px 32px rgba(253, 126, 20,0.4);
                    transform: translateY(-4px) scale(1.035);
                }

        media (max-width: 768px) {
            .glass-card {
                padding: 32px 22px;
            }

            .logo-header {
                flex-direction: column;
                gap: 10px;
            }

            .college-title {
                order: -1; /* title comes first */
                font-size: 1.15em;
            }

            h1 {
                font-size: 1.45em;
            }
        }

        media (max-width: 480px) {
            .logo {
                width: 70px;
                height: 70px;
            }

            .college-title {
                font-size: 1.1em;
            }
        }

        /* Footer */
        .app-footer {
            background: rgba(249,250,242,0.95);
            backdrop-filter: blur(12px);
            border-top: 3px solid var(--slate);
            box-shadow: 0 -8px 32px rgba(39,64,96,0.13);
            padding: 30px 20px;
            margin-top: 50px;
            text-align: center;
            color: #274060;
            border-radius: 20px 20px 0 0;
        }

        .footer-line {
            margin: 8px 0;
            line-height: 1.6;
        }

        .footer-highlight,
        .footer-name {
            font-weight: 700;
            color: #274060;
        }
    </style>
</head>

<body>

    <div class="glass-card">

        <!-- NEW LOGO + TITLE ROW -->
        <div class="logo-header">
            <img src="@Url.Content("~/images/RGMCET.jpg")" class="logo" />

            <div class="college-title">
                RGM College of Engineering & Technology (Autonomous)
            </div>

            <img src="@Url.Content("~/images/DataScience-Logo.jpg")" class="logo" />
        </div>

        <h1>Welcome to TeamPro1<br />Faculty & Student Portal</h1>

        <div class="button-group">
            <a class="glass-btn student" href="@Url.Action("Index", "Student")">Student</a>
            <a class="glass-btn faculty" href="@Url.Action("Login", "Faculty")">Faculty</a>
            <a class="glass-btn admin" href="@Url.Action("Login", "Admin")">Admin</a>
        </div>

    </div>

    <footer class="app-footer">
        <div class="footer-line">
            Developed under the guidance of <span class="footer-highlight">Dr. P. Penchala Prasad</span>, Associate Professor, CSE(DS), RGMCET
        </div>
        <div class="footer-line">
            With team <span class="footer-name">Mr. S. Md. Shahid Afrid</span> (23091A32D4) &
            <span class="footer-name">Ms. G. Veena</span> (23091A32H9)
        </div>
        <div class="footer-line">
            <strong>&copy; All Rights Reserved @@2025 </strong>
        </div>
    </footer>

</body>
</html>
